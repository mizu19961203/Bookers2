<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
					<table class="table">
						<tbody>
							 <%= attachment_image_tag @user, :profile_image, :fill, 50, 50 ,fallback: "no_image.jpg",size: "100x100"%>
							<tr>
								<th>name</th>
								<th><%= @user.name %></th>
							</tr>
							<tr>
								<th>introduction</th>
								<th><%= @user.introduction %></th>
							</tr>
						</tbody>
					</table>
					<div class="row">
						<%= link_to "" , edit_user_path(@user.id),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>
					</div>
					
				<h2>New book</h2>
				<%= form_for(@book) do |f| %>

					 <h4>Title</h4>
					 <%= f.text_field :title %>

					 <h4>Opinion</h4>
					 <%= f.text_area :body %>

					 <%= f.submit "Create Book", class: "col-xs-12 btn btn-info "%>
			    <% end %>
			</div>

			<div class="col-xs-9">
				<h2>Users</h2>
				
					<table class="table">
						<thead>
							<tr>
								<th>image</th>
								<th>name</th>
								<th></th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% @users.each do |user| %>
							<tr>
								<th><%= attachment_image_tag user, :profile_image,:fill, 50, 50 ,fallback: "no_image.jpg",size: "50x50"%></th>
								<th><%= user.name%></th>
								<th><%= link_to "Show", user_path(user.id), class: "col-xs-12 btn btn-link "%></th>
							<% end %>
						    </tr>
						</tbody>
				   </table>
				
			</div>
		</div>
	</div>
</div>